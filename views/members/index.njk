{% extends "layout.njk" %}

{% block content%}

<div class="card table-container">

    <a href="/members/create">Novo Membro</a>
    
    <table width="100%">
        <Thead>
            <tr>
                <th>Membro</th>
                <th>Email</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ação</th>
            </tr>
        </Thead>
        <tbody>

            {% for member in members %}

            <tr>
                <td>
                    <span style="background-image:url({{member.avatar_url}})"></span>
                    {{member.name}}
                </td>
                <td>{{member.email}}</td>
                <td>{{member.weight}}</td>
                <td>{{member.height}}</td>
                <td><a href="/members/{{member.id}}">Ver</a></td>
            </tr>

            {% endfor %}
           
        </tbody>
    </table>

</div>

{%endblock%}